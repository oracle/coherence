<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">      

 <defaults>
   <serializer>
     <instance>
        <class-name>cache.SerializationConfigurationTests$PofSerializer</class-name>
        <init-params>
         <init-param>
          <param-type>String</param-type>
          <param-value>pof-config.xml</param-value>
         </init-param>
        </init-params>
      </instance>
   </serializer>
 </defaults>

 <caching-scheme-mapping>
  <cache-mapping>
   <cache-name>default-custom-serializer</cache-name>
   <scheme-name>default-custom-serializer-scheme</scheme-name>
  </cache-mapping>
 </caching-scheme-mapping>

 <caching-schemes>
  <distributed-scheme>
   <scheme-name>default-custom-serializer-scheme</scheme-name>
   <service-name>distributed-default-custom-serializer</service-name>
   <backing-map-scheme>
    <partitioned>true</partitioned>
    <local-scheme />
   </backing-map-scheme>
  </distributed-scheme>
 </caching-schemes>

</cache-config>