<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <defaults>
        <serializer>pof</serializer>
    </defaults>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>view-with-ref</cache-name>
            <scheme-name>view-with-ref-scheme</scheme-name>
        </cache-mapping>
        <cache-mapping>
            <cache-name>view-with-back</cache-name>
            <scheme-name>view-with-back-scheme</scheme-name>
        </cache-mapping>
        <cache-mapping>
            <cache-name>view-with-no-back</cache-name>
            <scheme-name>view-with-no-back-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <view-scheme>
            <scheme-name>view-with-ref-scheme</scheme-name>
            <back-scheme>
                <distributed-scheme>
                    <scheme-ref>dist-default</scheme-ref>
                </distributed-scheme>
            </back-scheme>
            <autostart>true</autostart>
        </view-scheme>

        <view-scheme>
            <scheme-name>view-with-back-scheme</scheme-name>
            <back-scheme>
                <distributed-scheme>
                    <service-name>DistributedViewCache</service-name>
                    <backing-map-scheme>
                        <local-scheme/>
                    </backing-map-scheme>
                </distributed-scheme>
            </back-scheme>
            <autostart>true</autostart>
        </view-scheme>

        <view-scheme>
            <scheme-name>view-with-no-back-scheme</scheme-name>
            <autostart>true</autostart>
        </view-scheme>

        <distributed-scheme>
            <scheme-name>dist-default</scheme-name>
            <service-name>DistributedCache</service-name>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>
    </caching-schemes>

</cache-config>
