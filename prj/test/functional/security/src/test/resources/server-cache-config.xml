<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">    

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>*</cache-name>
      <scheme-name>distributed-scheme</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <!--
    Distributed caching scheme.
    -->
    <distributed-scheme>
      <scheme-name>distributed-scheme</scheme-name>
      <service-name>DistributedCache</service-name>

      <serializer>
        <instance>
        <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
        <init-params>
          <init-param>
            <param-type>string</param-type>
            <param-value>security/test-pof-config.xml</param-value>
          </init-param>
        </init-params>
        </instance>
      </serializer>

      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>

      <autostart>true</autostart>
    </distributed-scheme>

    <!--
    Proxy Service scheme that allows remote clients to connect to the
    cluster over TCP/IP.
    -->
    <proxy-scheme>
      <scheme-name>proxy-scheme</scheme-name>
      <!-- if the service name changes, change TestIdentityAsserter.java -->
      <service-name>TcpProxyService</service-name>

      <acceptor-config>
        <tcp-acceptor>
          <local-address>
            <address system-property="test.extend.address.local">127.0.0.1</address>
            <port    system-property="test.extend.port">9999</port>
          </local-address>
        </tcp-acceptor>
        <serializer>
          <instance>
            <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
            <init-params>
              <init-param>
                <param-type>string</param-type>
                <param-value>security/test-pof-config.xml</param-value>
              </init-param>
            </init-params>
          </instance>
        </serializer>
      </acceptor-config>

      <proxy-config>
        <cache-service-proxy>
          <class-name>security.EntitledCacheService</class-name>
          <init-params>
            <init-param>
              <param-type>com.tangosol.net.CacheService</param-type>
              <param-value>{service}</param-value>
            </init-param>
            <init-param>
              <param-type>String</param-type>
              <param-value>CN=Manager,OU=MyUnit</param-value>
            </init-param>
          </init-params>          
        </cache-service-proxy>
        <invocation-service-proxy>
          <class-name>security.EntitledInvocationService</class-name>
          <init-params>
            <init-param>
              <param-type>com.tangosol.net.InvocationService</param-type>
              <param-value>{service}</param-value>
            </init-param>
            <init-param>
              <param-type>String</param-type>
              <param-value>CN=Manager,OU=MyUnit</param-value>
            </init-param>
          </init-params>
        </invocation-service-proxy>
      </proxy-config>

      <autostart>true</autostart>
    </proxy-scheme>
  </caching-schemes>
</cache-config>