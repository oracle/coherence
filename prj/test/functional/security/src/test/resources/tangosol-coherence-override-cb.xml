<coherence  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://xmlns.oracle.com/coherence/coherence-operational-config"
            xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-operational-config coherence-operational-config.xsd"
            xml-override="common/tangosol-coherence-override.xml">
  <cluster-config>
    <authorized-hosts>
      <host-filter>
        <class-name>security.SysPropAuthorizedHostFilter</class-name>
      </host-filter>
    </authorized-hosts>
  </cluster-config>
  <security-config>
    <enabled>true</enabled>
    <login-module-name>Coherence</login-module-name>
    <access-controller>
      <class-name>com.tangosol.net.security.DefaultController</class-name>
      <init-params>
        <init-param id="1">
          <param-type>java.io.File</param-type>
          <param-value>keystoreRsa.p12</param-value>
        </init-param>
        <init-param id="2">
          <param-type>java.io.File</param-type>
          <param-value>permissions.xml</param-value>
        </init-param>
        <init-param id="3">
          <param-type>java.lang.Boolean</param-type>
          <param-value>store</param-value>
        </init-param>
        <init-param id="4">
          <param-type>java.lang.String</param-type>
          <param-value>password</param-value>
        </init-param>
      </init-params>
      <password-provider id="store">
        <class-name>com.tangosol.net.FileBasedPasswordProvider</class-name>
        <init-params>
          <init-param>
            <param-type>String</param-type>
            <param-value>storepass.txt</param-value>
          </init-param>
        </init-params>
      </password-provider>
    </access-controller>
    <callback-handler>
      <class-name>security.HandlerPasswordProvider</class-name>
      <init-params>
        <init-param id="1">
          <param-type>java.lang.String</param-type>
          <param-value>admin</param-value>
        </init-param>
        <init-param id="2">
          <param-type>java.lang.String</param-type>
          <param-value>com.oracle.coherence.testing.util.FileBasedPasswordProvider</param-value>
        </init-param>
        <init-param id="3">
          <param-type>java.lang.String</param-type>
          <param-value>keypass.txt</param-value>
        </init-param>
      </init-params>
    </callback-handler>
    <identity-asserter>
      <class-name>security.TestIdentityAsserter</class-name>
    </identity-asserter>
    <identity-transformer>
      <class-name>security.TestIdentityTransformer</class-name>
    </identity-transformer>
    <subject-scope>true</subject-scope>
    <authorizer>
      <class-name>security.TestAuthorizer</class-name>
    </authorizer>
  </security-config>
</coherence>
