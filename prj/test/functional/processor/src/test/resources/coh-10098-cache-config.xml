<!--
Cache Configuration used for the processor test suite.
-->

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">


  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>foo</cache-name>
      <scheme-name>partitioned</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <distributed-scheme>
      <scheme-name>partitioned</scheme-name>
      <service-name>PartitionedCache</service-name>

      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>backing-map</scheme-ref>
        </local-scheme>
      </backing-map-scheme>

      <autostart>false</autostart>
      <interceptors>
        <interceptor>
          <instance>
            <class-name>processor.Coh10098Tests$TransferInterceptor</class-name>
          </instance>
        </interceptor>
      </interceptors>
    </distributed-scheme>

    <local-scheme>
      <scheme-name>backing-map</scheme-name>

      <eviction-policy>HYBRID</eviction-policy>
      <high-units>{back-size-limit 0}</high-units>
      <expiry-delay>{back-expiry 1h}</expiry-delay>
    </local-scheme>

    <invocation-scheme>
      <scheme-name>InvocationService</scheme-name>
      <service-name>InvocationService</service-name>
      <thread-count-min>2</thread-count-min>
      <autostart>true</autostart>
    </invocation-scheme>

  </caching-schemes>
</cache-config>
