<!--
Cache Configuration used for the processor test suite.
-->

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">
 
  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>dist-std-test*</cache-name>
      <scheme-name>partitioned-std</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>dist-pool-test*</cache-name>
      <scheme-name>partitioned-pool</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>near-std-test*</cache-name>
      <scheme-name>near-std</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>near-pool-test*</cache-name>
      <scheme-name>near-pool</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>repl-test*</cache-name>
      <scheme-name>replicated</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>view-test*</cache-name>
      <scheme-name>view</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>local-test*</cache-name>
      <scheme-name>backing-map</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <distributed-scheme>
      <scheme-name>partitioned-std</scheme-name>
      <service-name>Partitioned</service-name>
      <thread-count-min>1</thread-count-min>

      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>backing-map</scheme-ref>
        </local-scheme>
      </backing-map-scheme>

      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>partitioned-pool</scheme-name>
      <service-name>PartitionedWithPool</service-name>
      <thread-count-min>2</thread-count-min>

      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>backing-map</scheme-ref>
        </local-scheme>
      </backing-map-scheme>

      <autostart>true</autostart>
    </distributed-scheme>

    <view-scheme>
      <scheme-name>view</scheme-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>partitioned-std</scheme-ref>
        </distributed-scheme>
      </back-scheme>
    </view-scheme>

    <near-scheme>
      <scheme-name>near-std</scheme-name>

      <front-scheme>
        <local-scheme>
          <eviction-policy>HYBRID</eviction-policy>
          <high-units>100</high-units>
          <expiry-delay>1m</expiry-delay>
        </local-scheme>
      </front-scheme>

      <back-scheme>
        <distributed-scheme>
          <scheme-ref>partitioned-std</scheme-ref>
        </distributed-scheme>
      </back-scheme>

      <invalidation-strategy>present</invalidation-strategy>
    </near-scheme>

    <near-scheme>
      <scheme-name>near-pool</scheme-name>

      <front-scheme>
        <local-scheme>
          <eviction-policy>HYBRID</eviction-policy>
          <high-units>100</high-units>
          <expiry-delay>1m</expiry-delay>
        </local-scheme>
      </front-scheme>

      <back-scheme>
        <distributed-scheme>
          <scheme-ref>partitioned-pool</scheme-ref>
        </distributed-scheme>
      </back-scheme>

      <invalidation-strategy>present</invalidation-strategy>
    </near-scheme>

    <replicated-scheme>
      <scheme-name>replicated</scheme-name>
      <service-name>Replicated</service-name>

      <backing-map-scheme>
        <local-scheme>
          <scheme-ref>backing-map</scheme-ref>
        </local-scheme>
      </backing-map-scheme>

      <autostart>true</autostart>
    </replicated-scheme>

    <local-scheme>
      <scheme-name>backing-map</scheme-name>

      <eviction-policy>HYBRID</eviction-policy>
      <high-units>{back-size-limit 0}</high-units>
      <expiry-delay>{back-expiry 1h}</expiry-delay>
    </local-scheme>

  </caching-schemes>
</cache-config>
