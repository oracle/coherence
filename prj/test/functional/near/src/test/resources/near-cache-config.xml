<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">
  <caching-scheme-mapping>

    <cache-mapping>
      <cache-name>near-*</cache-name>
      <scheme-name>simple-near</scheme-name>
      <init-params>
        <init-param>
          <param-name>back-size-limit</param-name>
          <param-value>8MB</param-value>
        </init-param>
      </init-params>
    </cache-mapping>

    <cache-mapping>
      <cache-name>near-4ever-*</cache-name>
      <scheme-name>simple-near</scheme-name>
      <init-params>
        <init-param>
          <param-name>front-expiry</param-name>
          <param-value>0</param-value>
        </init-param>
      </init-params>
    </cache-mapping>

    <cache-mapping>
      <cache-name>coh-4447-near</cache-name>
      <scheme-name>coh-4447-near</scheme-name>
      <init-params>
        <init-param>
          <param-name>back-size-limit</param-name>
          <param-value>8MB</param-value>
        </init-param>
      </init-params>
    </cache-mapping>

    <cache-mapping>
      <cache-name>coh-8796-near</cache-name>
      <scheme-name>coh-8796-near</scheme-name>
      <init-params>
        <init-param>
          <param-name>back-size-limit</param-name>
          <param-value>8MB</param-value>
        </init-param>
      </init-params>
    </cache-mapping>

    <cache-mapping>
      <cache-name>simple-dist</cache-name>
      <scheme-name>simple-distributed</scheme-name>
    </cache-mapping>

    <!-- Separate cache and scheme as the test involves shutting down the service -->
    <cache-mapping>
      <cache-name>coh-mbean-near</cache-name>
      <scheme-name>mbean-near</scheme-name>
    </cache-mapping>

    <cache-mapping>
      <cache-name>coh-15130-near</cache-name>
      <scheme-name>Coh-15130-near</scheme-name>
    </cache-mapping>

  </caching-scheme-mapping>

  <caching-schemes>

    <distributed-scheme>
      <scheme-name>simple-distributed</scheme-name>
      <service-name>DistributedCache</service-name>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>mbean-distributed</scheme-name>
      <service-name>DistributedCacheMbean</service-name>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>simple-distributed-rwbm</scheme-name>
      <service-name>DistributedCache</service-name>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>
                  com.tangosol.util.NullImplementation$NullCacheStore
              </class-name>
            </class-scheme>
          </cachestore-scheme>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>distributed-Coh15130</scheme-name>
      <service-name>Distributed-Coh15130</service-name>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
      <interceptors>
        <interceptor>
          <instance>
            <class-name>near.NearCacheTests$TestInterceptor</class-name>
          </instance>
        </interceptor>
      </interceptors>
    </distributed-scheme>

    <near-scheme>
      <scheme-name>simple-near</scheme-name>
      <front-scheme>
        <local-scheme>
          <high-units>{front-limit-entries 100}</high-units>
          <expiry-delay>{front-expiry 1m}</expiry-delay>
        </local-scheme>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>simple-distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <invalidation-strategy>present</invalidation-strategy>
      <autostart>true</autostart>
    </near-scheme>

    <near-scheme>
      <scheme-name>coh-4447-near</scheme-name>
      <front-scheme>
        <local-scheme>
          <eviction-policy>HYBRID</eviction-policy>
          <high-units>100</high-units>
          <expiry-delay>1m</expiry-delay>
        </local-scheme>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>simple-distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <invalidation-strategy>none</invalidation-strategy>
      <autostart>true</autostart>
    </near-scheme>

    <near-scheme>
      <scheme-name>coh-8796-near</scheme-name>
      <front-scheme>
        <local-scheme/>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>simple-distributed-rwbm</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <invalidation-strategy>logical</invalidation-strategy>
      <autostart>true</autostart>
    </near-scheme>

    <near-scheme>
      <scheme-name>mbean-near</scheme-name>
      <front-scheme>
        <local-scheme/>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>mbean-distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <invalidation-strategy>present</invalidation-strategy>
      <autostart>true</autostart>
    </near-scheme>

    <near-scheme>
      <scheme-name>Coh-15130-near</scheme-name>
      <front-scheme>
        <local-scheme/>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed-Coh15130</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <autostart>true</autostart>
    </near-scheme>

  </caching-schemes>
</cache-config>
