<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.oracle.coherence.ce.tests</groupId>
    <artifactId>coherence-functional-tests</artifactId>
    <version>${revision}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>ai</artifactId>
  <name>Coherence AI Tests</name>

  <properties>
    <testClassesDirectory>${project.build.outputDirectory}</testClassesDirectory>
    <coherence.graalvm.native.loadAllClasses>ai_tests</coherence.graalvm.native.loadAllClasses>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence</artifactId>
    </dependency>
    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-json</artifactId>
    </dependency>

    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-testing-support</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-params</artifactId>
    </dependency>
  </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.graalvm.buildtools</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>

    <profiles>
    <profile>
      <id>stage6</id>
      <properties>
        <skipTests>false</skipTests>
        <skip.native.build>false</skip.native.build>
        <skip.native.tests>false</skip.native.tests>
      </properties>
    </profile>

    <profile>
      <id>NotJava21</id>
      <activation>
        <jdk>(,20]</jdk>
      </activation>
      <properties>
        <is.not.java.21>true</is.not.java.21>
        <skipTests>true</skipTests>
      </properties>
    </profile>
  </profiles>
</project>
