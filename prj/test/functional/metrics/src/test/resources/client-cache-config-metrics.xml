<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">
  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>dist-*</cache-name>
      <scheme-name>dist-default</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>near-*</cache-name>
      <scheme-name>dist-near</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>dist-extend-*</cache-name>
      <scheme-name>extend-direct</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>write-behind-*</cache-name>
      <scheme-name>write-behind</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>write-through-*</cache-name>
      <scheme-name>write-through</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <near-scheme>
      <scheme-name>dist-near</scheme-name>
      <front-scheme>
        <local-scheme/>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>dist-default</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </near-scheme>

    <distributed-scheme>
      <scheme-name>dist-default</scheme-name>
      <service-name>DistributedCacheService</service-name>
      <backing-map-scheme>
        <local-scheme>
          <high-units>32M</high-units>
          <unit-calculator>binary</unit-calculator>
        </local-scheme>
      </backing-map-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>write-behind</scheme-name>
      <scheme-ref>dist-default</scheme-ref>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>common.TestCacheStore</class-name>
            </class-scheme>
          </cachestore-scheme>
          <write-delay>5000</write-delay>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>write-through</scheme-name>
      <scheme-ref>dist-default</scheme-ref>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>common.TestCacheStore</class-name>
            </class-scheme>
          </cachestore-scheme>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
    </distributed-scheme>

    <remote-cache-scheme>
      <scheme-name>extend-direct</scheme-name>
      <service-name>ExtendTcpClientCacheService</service-name>
      <proxy-service-name>ExtendTcpProxyService</proxy-service-name>
    </remote-cache-scheme>
  </caching-schemes>
</cache-config>
