<?xml version="1.0"?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">
  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>dist-*</cache-name>
      <scheme-name>dist-default</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>near-*</cache-name>
      <scheme-name>dist-near</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>ram-*</cache-name>
      <scheme-name>dist-ram</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>flash-*</cache-name>
      <scheme-name>dist-flash</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>persistence-*</cache-name>
      <scheme-name>dist-persistence</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>repl-*</cache-name>
      <scheme-name>replicated</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>write-behind-*</cache-name>
      <scheme-name>write-behind</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>write-through-*</cache-name>
      <scheme-name>write-through</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <near-scheme>
      <scheme-name>dist-near</scheme-name>
      <front-scheme>
        <local-scheme/>
      </front-scheme>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>dist-default</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </near-scheme>
    <replicated-scheme>
       <scheme-name>replicated</scheme-name>
       <backing-map-scheme>
          <local-scheme>
          </local-scheme>
       </backing-map-scheme>
       <autostart>true</autostart>
    </replicated-scheme>

    <distributed-scheme>
      <scheme-name>dist-default</scheme-name>
      <service-name>DistributedCacheService</service-name>
      <backing-map-scheme>
        <local-scheme>
          <high-units>32M</high-units>
          <unit-calculator>binary</unit-calculator>
        </local-scheme>
      </backing-map-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>write-behind</scheme-name>
      <scheme-ref>dist-default</scheme-ref>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>common.TestCacheStore</class-name>
            </class-scheme>
          </cachestore-scheme>
          <write-delay>5000</write-delay>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>write-through</scheme-name>
      <scheme-ref>dist-default</scheme-ref>
      <backing-map-scheme>
        <read-write-backing-map-scheme>
          <internal-cache-scheme>
            <local-scheme/>
          </internal-cache-scheme>
          <cachestore-scheme>
            <class-scheme>
              <class-name>common.TestCacheStore</class-name>
            </class-scheme>
          </cachestore-scheme>
        </read-write-backing-map-scheme>
      </backing-map-scheme>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>dist-ram</scheme-name>
      <service-name>RamJournalService</service-name>
      <backing-map-scheme>
        <ramjournal-scheme/>
      </backing-map-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>dist-flash</scheme-name>
      <service-name>FlashJournalService</service-name>
      <backing-map-scheme>
        <flashjournal-scheme/>
      </backing-map-scheme>
      <autostart system-property="test.dist.enabled">true</autostart>
    </distributed-scheme>

    <distributed-scheme>
      <scheme-name>dist-persistence</scheme-name>
      <service-name>DistributedCachePersistence</service-name>
      <partition-count>13</partition-count>
      <backing-map-scheme>
        <local-scheme>
          <unit-calculator>binary</unit-calculator>
        </local-scheme>
      </backing-map-scheme>
      <persistence>
        <environment>simple-bdb-environment</environment>
        <archiver>simple-directory-archiver</archiver>
      </persistence>
      <autostart system-property="test.persistence.enabled">true</autostart>
    </distributed-scheme>

    <proxy-scheme>
      <service-name>ExtendTcpProxyService</service-name>
      <acceptor-config>
        <tcp-acceptor>
          <local-address>
            <address system-property="test.extend.address.local">127.0.0.1</address>
            <port    system-property="test.extend.port">11005</port>
          </local-address>
        </tcp-acceptor>
      </acceptor-config>

      <autostart system-property="test.proxy.enabled">false</autostart>
    </proxy-scheme>
  </caching-schemes>
</cache-config>
