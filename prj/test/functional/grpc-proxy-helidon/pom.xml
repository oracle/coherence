<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.oracle.coherence.ce.tests</groupId>
    <artifactId>coherence-functional-tests</artifactId>
    <version>${revision}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>grpc-proxy-helidon</artifactId>
  <name>Coherence gRPC Proxy Tests (Helidon)</name>

  <properties>
    <module.name>helidon.grpc.proxy.testing</module.name>
    <testClassesDirectory>${project.build.outputDirectory}</testClassesDirectory>
    <test.server.classpath>${project.build.directory}/server</test.server.classpath>
    <is.not.java.21>false</is.not.java.21>

    <coherence.graalvm.native.loadAllClassesFrom>helidon.grpc.proxy</coherence.graalvm.native.loadAllClassesFrom>

    <!-- Currently fails native image testing -->
    <skip.native.build>true</skip.native.build>
    <skip.native.tests>true</skip.native.tests>

    <java.version>21</java.version>
    <java.version.release>21</java.version.release>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${coherence.group.id}</groupId>
      <artifactId>coherence-grpc-proxy-helidon</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${coherence.group.id}.tests</groupId>
      <artifactId>grpc-proxy-tck</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${coherence.group.id}.tests</groupId>
      <artifactId>grpc-proxy-tck-21</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>com.oracle.coherence.moditect</groupId>
        <artifactId>moditect-maven-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <dependenciesToScan>
            <dependency>${coherence.group.id}.tests:grpc-proxy-tck</dependency>
            <dependency>${coherence.group.id}.tests:grpc-proxy-tck-21</dependency>
          </dependenciesToScan>
          <systemPropertyVariables>
            <test.server.classpath>${test.server.classpath},${project.build.directory}</test.server.classpath>
          </systemPropertyVariables>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>get-dependencies</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>prepare-package</phase>
            <configuration>
              <outputDirectory>${test.server.classpath}</outputDirectory>
              <excludeScope>provided</excludeScope>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>stage8</id>
      <properties>
        <skipTests>false</skipTests>
      </properties>
    </profile>

    <profile>
      <id>NotJava21</id>
      <activation>
        <jdk>(,20]</jdk>
      </activation>
      <properties>
        <is.not.java.21>true</is.not.java.21>
        <skipTests>true</skipTests>
      </properties>
    </profile>
  </profiles>
</project>
