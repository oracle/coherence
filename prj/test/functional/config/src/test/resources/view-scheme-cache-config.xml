<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>view-filter</cache-name>
      <scheme-name>view-filter</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-filter-with-params</cache-name>
      <scheme-name>view-filter-with-params</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-filter-invalid</cache-name>
      <scheme-name>view-filter-invalid</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-transformer</cache-name>
      <scheme-name>view-transformer</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-transformer-with-params</cache-name>
      <scheme-name>view-transformer-with-params</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-read-only</cache-name>
      <scheme-name>view-read-only</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-reconnect-interval</cache-name>
      <scheme-name>view-reconnect-interval</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-with-listener</cache-name>
      <scheme-name>view-with-listener</scheme-name>
    </cache-mapping>
    <cache-mapping>
      <cache-name>view-with-macro</cache-name>
      <scheme-name>view-with-macro</scheme-name>
      <init-params>
        <init-param>
          <param-name>gt</param-name>
          <param-value>50</param-value>
        </init-param>
      </init-params>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <view-scheme>
      <scheme-name>view-filter</scheme-name>
      <service-name>view-filter</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <view-filter>
        <class-scheme>
          <class-name>com.tangosol.util.filter.NeverFilter</class-name>
        </class-scheme>
      </view-filter>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-filter-with-params</scheme-name>
      <service-name>view-filter-with-params</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <view-filter>
        <class-scheme>
          <class-name>com.tangosol.util.filter.GreaterFilter</class-name>
          <init-params>
            <init-param>
              <param-type>java.lang.String</param-type>
              <param-value>foo</param-value>
            </init-param>
            <init-param>
              <param-type>java.lang.Integer</param-type>
              <param-value>10</param-value>
            </init-param>
          </init-params>
        </class-scheme>
      </view-filter>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-filter-invalid</scheme-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <view-filter>
        <class-scheme>
          <class-name>com.tangosol.util.filter.NonExistentFilter</class-name>
        </class-scheme>
      </view-filter>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-transformer</scheme-name>
      <service-name>view-transformer</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <transformer>
        <class-scheme>
          <class-name>com.tangosol.util.extractor.IdentityExtractor</class-name>
        </class-scheme>
      </transformer>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-transformer-with-params</scheme-name>
      <service-name>view-transformer-with-params</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <transformer>
        <class-scheme>
          <class-name>com.tangosol.util.extractor.UniversalExtractor</class-name>
          <init-params>
            <init-param>
              <param-type>java.lang.String</param-type>
              <param-value>foo</param-value>
            </init-param>
          </init-params>
        </class-scheme>
      </transformer>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-read-only</scheme-name>
      <service-name>view-read-only</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <read-only>true</read-only>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-reconnect-interval</scheme-name>
      <service-name>view-reconnect-interval</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <reconnect-interval>1000</reconnect-interval>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-with-listener</scheme-name>
      <service-name>view-with-listener</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <listener>
        <class-scheme>
          <class-name>config.ViewSchemeConfigurationTests$TestListener</class-name>
        </class-scheme>
      </listener>
    </view-scheme>

    <view-scheme>
      <scheme-name>view-with-macro</scheme-name>
      <service-name>view-with-macro</service-name>
      <back-scheme>
        <distributed-scheme>
          <scheme-ref>distributed</scheme-ref>
        </distributed-scheme>
      </back-scheme>
      <view-filter>
        <class-scheme>
          <class-name>com.tangosol.util.filter.GreaterFilter</class-name>
          <init-params>
            <init-param>
              <param-type>java.lang.String</param-type>
              <param-value>foo</param-value>
            </init-param>
            <init-param>
              <param-type>java.lang.Integer</param-type>
              <param-value>{gt 10}</param-value>
            </init-param>
          </init-params>
        </class-scheme>
      </view-filter>
    </view-scheme>

    <distributed-scheme>
      <scheme-name>distributed</scheme-name>
      <backing-map-scheme>
        <local-scheme/>
      </backing-map-scheme>
      <autostart>true</autostart>
    </distributed-scheme>
  </caching-schemes>
</cache-config>