<!-- pick up the generic "tests" override -->
<coherence  xml-override="common/tangosol-coherence-override.xml">

  <cluster-config>
    <address-providers>
      <address-provider id="ExistentAddressProvider">
        <address>127.0.0.1</address>
      </address-provider>
    </address-providers>
    <packet-publisher>
      <packet-delivery>
        <!--
        Artificially set to 5 sec for the quorum test.
        -->
        <timeout-milliseconds>5000</timeout-milliseconds>
      </packet-delivery>
    </packet-publisher>
    <cluster-quorum-policy>
      <timeout-survivor-quorum>-1</timeout-survivor-quorum>
    </cluster-quorum-policy>
  </cluster-config>
</coherence>
