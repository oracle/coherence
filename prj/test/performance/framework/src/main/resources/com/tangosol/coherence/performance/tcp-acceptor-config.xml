<acceptor-config>
  <tcp-acceptor>
    <local-address>
      <address>127.0.0.1</address>
      <port>7777</port>
      <reusable>true</reusable>
    </local-address>
  </tcp-acceptor>

  <outgoing-message-handler>
    <request-timeout>60s</request-timeout>
  </outgoing-message-handler>

  <incoming-message-handler>
    <thread-count>1</thread-count>
  </incoming-message-handler>

  <serializer>
    <class-name>com.tangosol.coherence.performance.PofContext</class-name>
  </serializer>
</acceptor-config>