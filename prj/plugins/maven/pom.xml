<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.oracle.coherence.ce</groupId>
    <artifactId>plugins</artifactId>
    <version>${revision}</version>
  </parent>

  <groupId>com.oracle.coherence.maven</groupId>
  <artifactId>maven</artifactId>
  <packaging>pom</packaging>
  
  <name>Coherence Maven Plugins</name>
  <description>Parent project for Maven plugins</description>

  <modules>
    <module>pof-maven-plugin</module>
    <module>pof-maven-plugin-tests</module>
  </modules>

  <properties>
    <!-- library dependency versions -->
    <maven.plugin.api.version>3.6.3</maven.plugin.api.version>

    <!-- maven plugin versions -->
    <maven.artifact.transfer.version>0.12.0</maven.artifact.transfer.version>
    <maven.plugin.plugin.version>3.6.0</maven.plugin.plugin.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-plugin-api</artifactId>
        <version>${maven.plugin.api.version}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-core</artifactId>
        <version>${maven.plugin.api.version}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven.shared</groupId>
        <artifactId>maven-artifact-transfer</artifactId>
        <version>${maven.artifact.transfer.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.maven.plugin-tools</groupId>
        <artifactId>maven-plugin-annotations</artifactId>
        <version>${maven.plugin.plugin.version}</version>
        <scope>provided</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>